<div>
  <%= flash[:notice] %>
</div>

<% if @book.errors.any? %>
    <%= @book.errors.count %> errors prohibited this obj from being saved:
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
<% end %>

<%= render 'users/info&new', user: @user, book: @book_new %>

<h1 class="B-head">Books</h1>
<table>
  <thead>
    <tr>
      <th colspan="1"></th>
      <th>Title</th>
      <th>Opinion</th>
    </tr>
  </thead>
  <% @books.each do |book| %>
    <tbody>
      <tr>
        <td>
          <%= link_to user_path(book.user.id) do %>
            <%= image_tag book.user.get_profile_image(100, 100) %>
          <% end %>
        </td>
        <td> <%= link_to book.title, book_path(book.id) %></td>
        <td><%= book.body %></td>
      </tr>
    </tbody>
  <% end %>
</table>