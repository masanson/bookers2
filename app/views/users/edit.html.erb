<%= form_with model: @user do |f| %>
  <h4>profile image</h4>
  <%= f.file_field :profile_image, placeholder: "プロフィールimage", accept: "image/*" %>
  <div class="field">
    <h4>name</h4>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <h4>introdution</h4>
    <%= f.text_area :introdution %>
  </div>

  <%= f.submit 'Update User' %>
<% end %>