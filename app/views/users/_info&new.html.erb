<div>
  <h2 class="B-head">User info</h2>
  <%= image_tag user.get_profile_image(100, 100) %>
  <p><%= user.name %></p>
  <p><%= user.introduction %></p>
  <p><%= link_to "プロフィール編集", edit_user_path(user.id) %></p>
</div>

  <%= form_with model: book do |f| %>
  <div class="field">
    <h4>Title</h4>
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <h4>Body</h4>
    <%= f.text_area :body %>
  </div>
  <%= f.submit 'Create Book' %>
<% end %>
</div>