<div>
  <%= flash[:notice] %>
</div>

<%= render 'info&new', user: @user, book: @book %>

<div>
<h1 class="B-head">Users</h1>
  <table>
    <thead>
      <tr>
        <th>name</th>
        <th>image</th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <% @users.each do |user| %>
      <tbody>
        <tr>
          <td><%= user.name %></td>
          <td><%= image_tag user.get_profile_image(100, 100) %></td>
          <td> <%= link_to "Show", user_path(user.id) %></td>
          <td><%= link_to "Edit", edit_user_path(user.id) %></td>
          <td><%= link_to "Destroy", user_path(user.id), method: :delete, "data-confirm" => "Are you sure?" %></td>
        </tr>
      </tbody>
    <% end %>
  </table>
</div>